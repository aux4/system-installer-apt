{
  "scope": "aux4",
  "name": "system-installer-apt",
  "description": "aux4 system installer for apt (Linux)",
  "version": "0.1.0",
  "platforms": [
    "linux"
  ],
  "dependencies": [
    "aux4/pkger"
  ],
  "tags": [
    "aux4",
    "system-installer",
    "system-installer-linux",
    "linux",
    "apt",
    "ubuntu",
    "debian",
    "mint"
  ],
  "profiles": [
    {
      "name": "aux4:pkger:system",
      "commands": [
        {
          "name": "apt",
          "execute": [
            "profile:aux4:pkger:system:apt"
          ],
          "help": {
            "text": "Manage apt packages"
          }
        },
        {
          "name": "linux",
          "execute": [
            "profile:aux4:pkger:system:apt"
          ],
          "help": {
            "text": "Manage linux packages"
          }
        }
      ]
    },
    {
      "name": "aux4:pkger:system:apt",
      "commands": [
        {
          "name": "install",
          "execute": [
            "apt install -y ${package}"
          ],
          "help": {
            "text": "Install apt package",
            "variables": [
              {
                "name": "package",
                "text": "The package name",
                "arg": true
              }
            ]
          }
        },
        {
          "name": "uninstall",
          "execute": [
            "apt remove -y ${package}"
          ],
          "help": {
            "text": "Uninstall apt package",
            "variables": [
              {
                "name": "package",
                "text": "The package name",
                "arg": true
              }
            ]
          }
        }
      ]
    }
  ]
}
